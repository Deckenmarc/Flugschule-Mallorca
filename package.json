{
  "name": "flugschule-mallorca-website",
  "version": "1.0.0",
  "description": "Static website for Flugschule Mallorca - Flight training and charter services",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run optimize:images && vite build",
    "build:prod": "npm run optimize:images && vite build --mode production",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "optimize:images": "node scripts/optimize-images.js",
    "analyze": "vite build --mode analyze",
    "test:seo": "node scripts/seo-validator.js",
    "test:accessibility": "node scripts/accessibility-checker.js",
    "test:responsive": "node scripts/responsive-tester.js",
    "test:all": "npm run test:seo && npm run test:accessibility && npm run test:responsive",
    "validate": "npm run test:all",
    "deploy": "node scripts/deploy.js",
    "deploy:netlify": "npm run deploy && netlify deploy --prod --dir=dist",
    "deploy:vercel": "npm run deploy && vercel --prod",
    "predeploy": "npm run validate"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "terser": "^5.24.0",
    "vite-plugin-imagemin": "^0.6.1",
    "imagemin-webp": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "postcss-import": "^15.1.0",
    "cssnano": "^6.0.1",
    "jsdom": "^23.0.0",
    "puppeteer": "^21.0.0",
    "netlify-cli": "^17.0.0"
  },
  "dependencies": {
    "web-vitals": "^3.5.0"
  },
  "keywords": [
    "flight-school",
    "mallorca",
    "ppl",
    "aviation",
    "charter",
    "static-site"
  ],
  "author": "Flugschule Mallorca",
  "license": "MIT"
}